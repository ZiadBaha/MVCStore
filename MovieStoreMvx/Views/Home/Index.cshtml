@model MovieStoreMvx.Models.DTO.MovieListVm
@{
    Layout = "_Layout";
}
<style>
    .movies {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
        font-family: var(--font-mukta);
        margin-top: 20px;
    }

    .movie-card {
        flex-basis: 16%;
        display: flex;
        padding: 0px 0;
        flex-direction: column;
        height: 300px;
        box-shadow: rgba(17, 17, 26, 0.1) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;
        cursor: pointer;
        border-radius: 20px;
        overflow: hidden;
        width: 300px;
    }

        .movie-card:hover {
            box-shadow: rgba(17, 17, 26, 0.1) 0px 18px 30px, rgba(17, 17, 26, 0.05) 0px 8px 32px;
        }

        .movie-card .movie-info {
            padding: 9px;
            text-align: center;
        }

        .movie-card .movie-title {
            font-size: 24px;
            font-weight: 700;
        }

        .movie-card .movie-genre,
        .movie-card .movie-year {
            font-size: 16px;
            color: #554e4e;
        }

    .movie-image {
        position: relative;
        width: 100%;
        height: 250px;
        overflow: hidden;
    }

        .movie-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

